{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tabularius/shared-core": ["libs/shared-core/src/index.ts"],
      "@tabularius/ui": ["libs/ui/src/index.ts"],
      "@tabularius/shared-libs": ["libs/shared-libs/src/index.ts"],
      "@tabularius/modules/app-dash": ["libs/modules/app-dash/src/index.ts"],
      "@tabularius/modules/app-journal": [
        "libs/modules/app-journal/src/index.ts"
      ],
      "@tabularius/modules/app-reports": [
        "libs/modules/app-reports/src/index.ts"
      ],
      "@tabularius/modules/app-import": ["libs/modules/app-import/src/index.ts"]
    },
    "strict": true
  },
  "exclude": ["node_modules", "tmp"]
}
