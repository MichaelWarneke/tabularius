{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@tabu/*": [
        "./projects/tabu/src/app/*"
      ],
      "@tabu-lib/models": [
        "projects/tabu-lib/models/index.ts"
      ],
      "@tabu-lib/core": [
        "projects/tabu-lib/core/src/index.ts"
      ],
      "@tabu-lib/modules/journal": [
        "projects/tabu-lib/modules/journal/src/index.ts"
      ],
      "@tabu-lib/modules/balance": [
        "projects/tabu-lib/modules/balance/src/index.ts"
      ],
      "@tabu-lib/modules/coa": [
        "projects/tabu-lib/modules/coa/src/index.ts"
      ],
      "@tabu-lib/modules/p-and-l": [
        "projects/tabu-lib/modules/p-and-l/src/index.ts"
      ],
      "@tabu-lib/modules/home": [
        "projects/tabu-lib/modules/home/src/index.ts"
      ]
    },
    "strict": true,
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
